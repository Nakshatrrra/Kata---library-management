{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "strict": true,
      "baseUrl": "./",
      "paths": {
        "*": ["src/*"]
      }
    },
    "include": ["src/**/*", "src/tests/**/*"],
    "exclude": ["node_modules"]
  }
  